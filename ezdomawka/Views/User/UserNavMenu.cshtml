@using Common.Configs
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using ModelsConfiguration
@model BLL.Models.Auth.LoginRequest




@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>Scholar - Online School HTML5 Template</title>

    <link href="~/lib/new/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/base/fontawesome.css">
    <link rel="stylesheet" href="~/css/base/app.css">
    <link rel="stylesheet" href="~/css/base/owl.css">
    <link rel="stylesheet" href="~/css/base/animate.css">
    <link rel="stylesheet"href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>

    <link rel="stylesheet" href="~/css/pages/login.css">
    <link rel="stylesheet" href="~/css/pages/main.css">
</head>

<body>


<!--Header Area Start-->
<header class="header-area header-sticky background-header only-background">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!--Logo-->
                    <a href="index.html" class="logo">
                        <h1>EzDomawka</h1>
                    </a>
                    <!--Logo End-->

                    <!--Menu Start-->
                    <ul class="nav nav--main_menu">
                        <li class="go-to-section">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Посмотреть Услуги</a>
                        </li>
                        <li class="go-to-section">
                            <a asp-area="" asp-controller="FavorSolution" asp-action="AddSolution">Добавить Услугу</a>
                        </li>
                        <li class="go-to-section">
                            <a asp-area="" asp-controller="Home" asp-action="Rools">О сайте</a>
                        </li>
                        <li class="go-to-section">
                            <a asp-area="" asp-controller="Home" asp-action="AddSuggestion">Предложить идею</a>
                        </li>
                        <li class="go-to-section">
                            <a href="/addidea">User Name</a>
                        </li>
                        <li class="go-to-section">
                            <a asp-area="" asp-controller="Auth" asp-action="Logout">Выйти</a>
                        </li>
                    </ul>
                    <a class='menu-trigger'>
                        <span>Меню</span>
                    </a>
                    <!--Menu End-->
                </nav>
            </div>
        </div>
    </div>
</header>
<!--Header Area End-->


<div class="contact-us section" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="col-lg-12 col-lg-12--flex">
                    
                    <fieldset class="login_button">
                        <button  onclick="location.href='@Url.Action("", "Auth")'"  class="orange-button">Войти</button>
                    </fieldset>

                    <fieldset class="login_button">
                        <button id="clearFormButton" type="button" class="orange-button">Очистить</button>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Scripts -->
<script src="~/lib/new/jquery/jquery.min.js"></script>
<script src="~/lib/new/bootstrap/js/bootstrap.min.js"></script>
<script src="~/js/default/isotope.min.js"></script>
<script src="~/js/default/owl-carousel.js"></script>
<script src="~/js/default/counter.js"></script>
<script src="~/js/default/custom.js"></script>

</body>
</html>