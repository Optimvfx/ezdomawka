@using Common.Consts
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BLL.Models.ViewModels.FavorSolutionVm



@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="item">
    <div class="col-lg-9 text-center">
        <ul>
            <li>
                <h3>@Model.Theme.Name</h3>
                <span>Об Услуге: @Model.Text</span>
            </li>
            <li>
                <span>Уникальный идетификатор:</span>
                <h6>@Model.Id</h6>
            </li>
            <li>
                <span>
                    <b>Добавлена:</b>
                </span>
                <h6>@Model.Created.ToLocalTime().ToString().Split()[0]</h6>
            </li>
            <li>
                <span>
                    <b>Стоимость:</b>
                </span>
                <h6>@Model.Price rub</h6>
            </li>
        </ul>


        <div class="col-lg-12 col-lg-12--flex">
            <fieldset class="button button--remove">
                <button class="orange-button"
                        onclick="location.href='@Url.Action("EditFavor", "User")'"
                        asp-route-Id="@Model.Id">Редактировать</button>
            </fieldset>
            
            <fieldset class="button">
                <button class="orange-button"
                        onclick="location.href='@Url.Action("DeleteFavor", "User")'"
                        asp-route-Id="@Model.Id">Удалить услугу</button>
            </fieldset>
        </div>
    </div>
</div>