@model BLL.Models.ViewModels.FavorSolutionVm

<div>
    <div class="col-12 border bg-light">
        <div class="">
            <div class="col-12 row text-center">
                <div class="col-6">
                    <b class="">@Model.Nick</b>
                </div>
                <div class="col-6">
                    <b class=""> Цена: @Model.Price руб </b>
                </div>
            </div>
            <div class="col-12 pt-2 d-flex justify-content-center">
                <span class="p-2 border w-100 text-center" style="background-color: lavenderblush">@Model.Theme.Name</span>
            </div>
            <div class="col-12">
                <div style="background-color: #f5f5f5; border-color: #000000;" class="col-12 text-center border border-3">
                    <div class="p-3">
                        <p>Об Услуге:</p>
                        <span>@Model.Text</span>
                    </div>
                </div>
            </div>
            <div class="col-12 pt-1 text-center">
                @foreach (var modelSubject in Model.Subjects)
                {
                    <div class='pt-2 blockSelSubj'>
                        <div class='selectedSubject p-3'>
                            <i class=''>@modelSubject.Name</i>
                        </div>
                    </div>
                }
            </div>
            <div class="col-12 row pt-3 pb-1 text-center">
                <div style="font-size: 20px;" class="col-6">
                    @if (Model.Connection.Substring(0, 5) == "https")
                    {
                    <a href="@Model.Connection">Связаться</a>
                    }
                    else
                    {
                        <a href="https://@Model.Connection">Связаться</a>
                    }
                    <div>@Model.Connection</div>
                </div>
                <div class="col-6">
                    <small style="font-size: 13px;" class=""> Дата создания: @Model.Created.ToLocalTime().ToString().Split()[0] </small>
                </div>
            </div>
        </div>
    </div>
</div>