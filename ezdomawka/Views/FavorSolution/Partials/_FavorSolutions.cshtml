@model IEnumerable<BLL.Models.ViewModels.FavorSolutionVm>


<div class="section events" id="events">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 text-center">
                <div class="section-heading">
                    <h6>На нашем сайте</h6>
                    <h2 class="no_extra_text_effects">Было найдено @Model.Count() решений по вашему запросу</h2>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="pt-1 col-12">
                    @foreach (var el in Model)
                    {
                        <partial model="@el" name="../FavorSolution/Partials/_FavorSolutionCard"/>
                    }
                </div>
            }
            else
            {
                <div class="d-flex justify-content-center pt-4">
                    <h2 class="text-center">Таких услуг нет</h2>
                </div>
            }
        </div>
    </div>
</div>