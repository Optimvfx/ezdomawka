@model IEnumerable<BLL.Models.ViewModels.ThemeVm>

@section Styles
{
    <link rel="stylesheet" href="~/css/pages/main.css"  asp-append-version="true">
    <link rel="stylesheet" href="~/css/pages/admin.css"  asp-append-version="true">
}

<div class="servicesList">
    <div class="container">
        <div class="row">
            <div class="menu">
                <div class="menu_content">
                    <div class="container p-3">
                        <div class="row pt-4">
                            <div class="col-6">
                                <h2 class="text-primary edit_model_title">Theme List</h2>
                            </div>
                            <div class="col-6">
                                <a asp-action="AddTheme" class="create_button">
                                    <i>&nbsp; Create New Theme</i>
                                </a>
                            </div>
                        </div>
                        <br/><br/>
                        @if (Model.Count() > 0)
                        {
                            <table class="table table-bordered table-striped edit_model">
                                <thead>
                                <tr>
                                    <th class="edit_model_element">
                                        Theme Name
                                    </th>
                                    <th class="edit_model_element">
                                        Manage
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var obj in Model)
                                {
                                    <tr>
                                        <td width="50%" class="edit_model_element">@obj.Name</td>
                                        <td class="text-center edit_model_element">
                                            <div class="w-75 btn-group" role="group" class="edit_model_element">
                                                <a asp-route-id="@obj.Id" asp-action="DeleteTheme" class="btn btn-danger mx-2">
                                                    <i>Удалить</i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


