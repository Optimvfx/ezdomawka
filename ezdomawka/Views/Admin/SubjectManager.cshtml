@model IEnumerable<BLL.Models.ViewModels.SubjectVm>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Subject List</h2>
        </div>
        <div class="col-6" >
            <a asp-action="AddSubject" class="btn btn-primary">
                <i>&nbsp; Create New Subject</i>
            </a>
        </div>
    </div>
    <br/><br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>
                    Subject Name
                </th>
                <th>
                    Manage
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-id="@obj.Id" asp-action="DeleteSubject"  class="btn btn-danger mx-2">
                                <i>Удалить</i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>