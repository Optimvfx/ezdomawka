@model BLL.Models.Admin.BanRequest

@section Styles
{
    <link rel="stylesheet" href="~/css/pages/main.css"  asp-append-version="true">
        <link rel="stylesheet" href="~/css/pages/login.css"  asp-append-version="true">
}

<div class="contact-us section" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6  align-self-center">
                <div class="section-heading">
                    <h6>Забанить</h6>
                    <h2 class="no_extra_text_effects">На этой странице вы можете забанить пользователя.</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-us-content">
                    <form class="input_form" asp-action="BanUser" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <fieldset class="input_field">
                                    <textarea id="text" asp-for="Reason" data="elastic" required placeholder="Введите причину *"></textarea>
                                    <span asp-validation-for="Reason" class="text-danger text-danger--blue_style"></span>
                                </fieldset>
                            </div>

                            <div class="col-lg-12">
                                <fieldset class="input_field">
                                    <input asp-for="Duration" type="date" required placeholder="Введите продолжительность *"/>
                                    <span asp-validation-for="Duration" class="text-danger  text-danger--blue_style"></span>
                                </fieldset>
                            </div>

                            <div class="col-lg-12 col-lg-12--flex">
                                <fieldset class="login_button">
                                    <button type="submit" id="form-submit" class="orange-button">Забанить</button>
                                </fieldset>

                                <fieldset class="login_button">
                                    <button id="clearFormButton" type="button" class="orange-button">Очистить</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
