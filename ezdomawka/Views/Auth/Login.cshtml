@model BLL.Models.Auth.LoginRequest

<div class="d-flex justify-content-center">
    <div class="col-6">
        <div>
            <form asp-action="Login" method="post">
                <div class="pt-2">
                    <input asp-for="Email" maxlength="60" type="text" required class="form-control" placeholder="Введите почту *"/>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="pt-2">
                    <input asp-for="Password" maxlength="60" type="text" required class="form-control" placeholder="Введите пароль *"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="pt-2 text-center">
                    <button type="submit" class="btn btn-dark">Войти</button>
                    <button type="button" class="btn btn-danger">Очистить</button>
            </div>
            </form>
        </div>
    </div>
</div>