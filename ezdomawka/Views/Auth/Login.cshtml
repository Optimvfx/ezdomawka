@model BLL.Models.Auth.LoginRequest


<div class="d-flex justify-content-center">
    <div class="col-10 block">
        <div>
            <form id="form" asp-action="Login" method="post">
                <input name="returnUrl" value="@ViewBag.returnUrl" hidden/>
                <div class="pt-2">
                    <input asp-for="Email" maxlength="60" type="email" required class="form-control" placeholder="Введите почту *"/>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="pt-2">
                    <input asp-for="Password" maxlength="60" type="password" required class="form-control" placeholder="Введите пароль *"/>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="pt-2 text-center">
                    <a asp-controller="Auth" asp-action="Register">Регистрация</a>
                </div>
                <div class="pt-2 text-center">
                    <a href="#">Забыли пароль?</a>
                </div>
                <div class="pt-2 text-center">
                    <button type="submit" class="btn btn-dark">Войти</button>
                    <button id="clearFormButton" type="button" class="btn btn-danger">Очистить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="~/css/Auth/Login.css" asp-append-version="true" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}