@model BLL.Models.Auth.RegisterRequest

<div class="d-flex justify-content-center">
    <div class="col-6">
        <div>
            <form id="form" method="post" asp-action="Register">
                <div class="pt-2">
                    <input asp-for="Email" maxlength="60" type="text" required class="form-control" placeholder="Введите почту *"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="pt-2">
                    <input asp-for="Nick" maxlength="60" type="text" required class="form-control" placeholder="Введите никнейм *"/>
                    <span asp-validation-for="Nick" class="text-danger"></span>
                </div>
                <div class="pt-2">
                    <input asp-for="Password" maxlength="60" type="password" required class="form-control" placeholder="Введите пароль *"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="pt-2">
                    <input asp-for="ConfirmPassword" maxlength="60" type="password" required class="form-control" placeholder="Повторите пароль *"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="pt-2 text-center">
                    <button type="submit" class="btn btn-dark">Зарегистрироваться</button>
                    <button id="clearFormButton" type="button" class="btn btn-danger">Очистить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        
    }
}